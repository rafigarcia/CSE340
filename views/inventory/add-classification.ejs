<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<form action="add-classification" account="/inv" method="post">
    <fieldset>
    <div class="form-control">
        <label for="classificationName">Classification Name</label>
        <span>Name must be alphabetic characters only</span>
        <input type="text" id="classificationName" name="classification_name" placeholder="Classification Name" pattern="[A-Za-z]+" required value="<%= locals.classification_name %>">
    </div>
    <input type="submit" value="Submit" class="button">
    </fieldset>
</form>