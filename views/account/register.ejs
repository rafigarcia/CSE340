<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="register-form" action="/account/register" method="post">
    <fieldset>
    <legend>Register</legend> 
        <div class="form-control">
            <label for="firstname">First Name</label>
            <input type="text" id="firstname" name="account_firstname" placeholder="Your First name" required>
        </div>
        <div class="form-control">
            <label for="lastname">Last Name</label>
            <input type="text" id="lastname" name="account_lastname" placeholder="Your Last name" required>
        </div>
        <div class="form-control">
            <label for="email">Email</label>
            <input type="email" name="account_email" id="email" placeholder="Email" required>
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
            <input type="password" id="password" name="account_password" placeholder="Insert your password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
        <input type="submit" value="Submit" class="button">
    </fieldset>
</form>