<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="register-form" action="/account/register" method="post">
    <fieldset>
    <legend>Register</legend> 
        <div class="form-control">
            <label for="accountFirstname">First Name</label>
            <input type="text" id="accountFirstname" name="account_firstname" placeholder="Your First name" required value="<%= locals.account_firstname %>">
        </div>
        <div class="form-control">
            <label for="accountLastname">Last Name</label>
            <input type="text" id="accountLastname" name="account_lastname" placeholder="Your Last name" required value="<%= locals.account_lastname %>">
        </div>
        <div class="form-control">
            <label for="accountEmail">Email</label>
            <input type="email" name="account_email" id="accountEmail" placeholder="Email" required value="<%= locals.account_email %>">
        </div>
        <div class="form-control">
            <label for="accountPassword">Password</label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
            <input type="password" id="accountPassword" name="account_password" placeholder="Insert your password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
        <input type="submit" value="Submit" class="button">
    </fieldset>
</form>